{
    "builders": [
      {
        "type": "vsphere-iso",
        "vcenter_server":      "{{user `vcenter_server`}}",
        "username":            "{{user `username`}}",
        "password":            "{{user `password`}}",
        "insecure_connection": "true",
        "vm_name": "packer.ubuntu.18.04.{{isotime \"2006-01-02\"}}",
        "datastore": "{{user `datastore`}}",
        "folder": "{{user `folder`}}",
        "host":     "{{user `host`}}",
        "convert_to_template": "false",
        "create_snapshot": "true",
        "cluster": "{{user `cluster`}}",
        "network": "{{user `network`}}",
        "boot_order": "disk,cdrom",
        "notes": "Built by Packer",
        "guest_os_type": "ubuntu64Guest",
        "ssh_username": "{{user `ssh_username`}}",
        "ssh_password": "{{user `ssh_password`}}",
        "CPUs":             1,
        "RAM":              1024,
        "RAM_reserve_all": true,
        "disk_controller_type":  "pvscsi",
        "disk_size":        20480,
        "disk_thin_provisioned": true,
        "network_card": "vmxnet3",
        "iso_paths": [
          "{{user `ubuntu1804_iso`}}"
        ],
        "iso_checksum": "{{user `ubuntu1804_checksum`}}",
        "iso_checksum_type": "sha256",
        "floppy_files": [
          "./preseed.cfg"
        ],
        "boot_command": [
          "<enter><wait><f6><wait><esc><wait>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs>",
          "/install/vmlinuz",
          " initrd=/install/initrd.gz",
          " priority=critical",
          " locale=en_US",
          " file=/media/preseed.cfg",
          "<enter>"
        ]
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "echo 'template build complete'",
          "sudo apt-get update",
          "sudo apt-get upgrade -yq",
          "sudo apt-get install cloud-init -yq",
          "sudo dpkg-reconfigure cloud-init --frontend=noninteractive"
          "curl -sL https://raw.githubusercontent.com/sammcgeown/vsphere-packer-templates/master/ubuntu-18.04/prepare-template.sh | sudo -E bash -"
        ]
      }
    ]
  }
