{
    "builders": [
      {
        "type": "vsphere-iso",
        "vcenter_server":      "{{user `vcenter_server`}}",
        "username":            "{{user `username`}}",
        "password":            "{{user `password`}}",
        "insecure_connection": "true",
        "vm_name": "packer-ubuntu-1804-{{isotime \"2006-01-02\"}}",
        "datastore": "{{user `datastore`}}",
        "folder": "{{user `folder`}}",
        "host":     "{{user `host`}}",
        "convert_to_template": "true",
        "create_snapshot": "true",
        "cluster": "{{user `cluster`}}",
        "network": "{{user `network`}}",
        "boot_order": "disk,cdrom",
        "notes": "Default SSH User: {{user `ssh_username`}}\nDefault SSH Pass: {{user `ssh_password`}}\nBuilt by Packer.",
        "guest_os_type": "ubuntu64Guest",
        "ssh_username": "{{user `ssh_username`}}",
        "ssh_password": "{{user `ssh_password`}}",
        "CPUs":             1,
        "RAM":              1024,
        "RAM_reserve_all": true,
        "disk_controller_type":  "pvscsi",
        "disk_size":        20480,
        "disk_thin_provisioned": true,
        "network_card": "vmxnet3",
        "iso_paths": [
          "{{user `ubuntu1804_iso`}}"
        ],
        "iso_checksum": "{{user `ubuntu1804_checksum`}}",
        "iso_checksum_type": "sha256",
        "floppy_files": [
          "{{template_dir}}/preseed.cfg",
          "{{template_dir}}/prepare-template.sh"
        ],
        "boot_command": [
          "<enter><wait><f6><wait><esc><wait>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
          "<bs><bs><bs>",
          "/install/vmlinuz",
          " initrd=/install/initrd.gz",
          " priority=critical",
          " locale=en_US",
          " file=/media/preseed.cfg",
          "<enter>"
        ]
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "sudo apt-get update",
          "sudo apt-get upgrade -yq",
          "sudo apt-get install curl cloud-init -yq",
          "sudo dpkg-reconfigure cloud-init --frontend=noninteractive",
          "cloud-init clean",
          "truncate -s 0 /etc/machine-id",
          "rm /var/lib/dbus/machine-id",
          "ln -s /etc/machine-id /var/lib/dbus/machine-id",
          "service rsyslog stop",
          "if [ -f /var/log/wtmp ]; then truncate -s0 /var/log/wtmp; fi",
          "if [ -f /var/log/lastlog ]; then truncate -s0 /var/log/lastlog; fi",
          "rm -rf /tmp/*",
          "rm -rf /var/tmp/*",
          "sed -i 's/preserve_hostname: false/preserve_hostname: true/g' /etc/cloud/cloud.cfg",
          "truncate -s0 /etc/hostname",
          "hostnamectl set-hostname localhost",
          "apt clean",
          "sudo swapoff --all",
          "sudo sed -ri '/\\sswap\\s/s/^#?/#/' /etc/fstab",
          "sed -i 's/optional: true/dhcp-identifier: mac/g' /etc/netplan/50-cloud-init.yaml",
          "sudo cloud-init clean --logs",
          "cat /dev/null > ~/.bash_history && history -c",
          "history -w"
        ]
      }
    ]
  }
