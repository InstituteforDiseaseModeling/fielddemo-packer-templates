{
    "builders": [
      {
        "type": "vsphere-iso",
        "vcenter_server":      "{{user `vcenter_server`}}",
        "username":            "{{user `username`}}",
        "password":            "{{user `password`}}",
        "insecure_connection": "true",
        "vm_name": "packer-centos-7-{{isotime \"2006-01-02\"}}",
        "datastore": "{{user `datastore`}}",
        "folder": "{{user `folder`}}",
        "host":     "{{user `host`}}",
        "convert_to_template": "true",
        "create_snapshot": "true",
        "cluster": "{{user `cluster`}}",
        "network": "{{user `network`}}",
        "boot_order": "disk,cdrom",
        "notes": "Default SSH User: {{user `ssh_username`}}\nDefault SSH Pass: {{user `ssh_password`}}\nBuilt by Packer.",
        "guest_os_type": "centos7_64Guest",
        "ssh_username": "{{user `ssh_username`}}",
        "ssh_password": "{{user `ssh_password`}}",
        "CPUs":             1,
        "RAM":              1024,
        "RAM_reserve_all": true,
        "disk_controller_type":  "pvscsi",
        "disk_size":        20480,
        "disk_thin_provisioned": true,
        "network_card": "vmxnet3",
        "iso_paths": [
          "{{user `ubuntu1804_iso`}}"
        ],
        "iso_checksum": "{{user `ubuntu1804_checksum`}}",
        "iso_checksum_type": "sha256",
        "floppy_files": [
          "{{template_dir}}/centos.ks"
        ],
        "boot_command": " inst.text inst.ks=hd:fd0:/centos.ks"
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
        ]
      }
    ]
  }
